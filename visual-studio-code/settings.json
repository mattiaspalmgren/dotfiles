{
    // WORKBENCH
    "workbench.startupEditor": "newUntitledFile",
    "workbench.activityBar.visible": false,
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreview": false,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.editor.centeredLayoutAutoResize": false,

    // EDITOR
    "editor.fontSize": 11,
    "editor.tabSize": 2,
    "editor.minimap.enabled": false,
    "editor.lineHeight": 22,
    "editor.renderControlCharacters": false,
    "editor.renderIndentGuides": false,
    "editor.highlightActiveIndentGuide": false,
    "editor.matchBrackets": "never",
    "editor.occurrencesHighlight": false,
    "editor.renderLineHighlight": "none",
    "editor.selectionHighlight": false,
    "editor.detectIndentation": false,
    "editor.parameterHints.cycle": true,
    "editor.parameterHints.enabled": false,
    "editor.smoothScrolling": false,
    "editor.lightbulb.enabled": false,
    "editor.codeLens": true,
    "editor.foldingStrategy": "indentation",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.stablePeek": false,
    "editor.foldingHighlight": false,

    // EXPLORER
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,

    // WINDOW
    "window.zoomLevel": 0,

    // MACROS
    "macros": {
      "selectAndCloseExplorer": [
        "list.select",
        "workbench.action.toggleSidebarVisibility",
      ],
    },

    // VIM
    "vim.foldfix": true,
    "vim.useSystemClipboard": true,
    "vim.sneak": true,
    "vim.leader": "space",
    "vim.useCtrlKeys": false,
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<leader>","w"],
        "commands": ["workbench.action.files.saveAll"]
      },
      {
        "before": ["<leader>","q"],
        "commands": ["workbench.action.closeActiveEditor"]
      },
      {
        "before": ["<leader>","tab"],
        "commands": ["workbench.action.nextEditor"]
      },
      {
        "before": ["<leader>","f"],
        "commands": ["workbench.action.findInFiles"]
      },
      {
        "before": ["<leader>","a"],
        "commands": ["workbench.action.showCommands"]
      },
      {
        "before": ["g","t"],
        "commands": ["editor.action.goToDeclaration"]
      },
      {
        "before": ["g","h"],
        "commands": ["editor.action.showHover"]
      },
      {
        "before": ["<leader>","1"],
        "commands": ["editor.foldLevel1"]
      },
      {
        "before": ["<leader>","2"],
        "commands": ["editor.foldLevel2"]
      },
      {
        "before": ["<leader>","v"],
        "commands": ["workbench.files.action.showActiveFileInExplorer"]
      },
      {
        "before": ["<leader>","b"],
        "commands": ["workbench.action.navigateBack"]
      },
      {
        "before": ["g","r"],
        "commands": ["git.revertSelectedRanges"]
      },
      {
        "before": ["<leader>","t"],
        "commands": ["extension.jumpToTest"]
      },
      {
        "before": ["<leader>","r"],
        "commands": ["extension.runJest"]
      },
      {
        "before": ["<leader>","d"],
        "commands": ["extension.debugJest"]
      },
      {
        "before": ["<leader>", "m"],
        "commands": ["bookmarks.toggle"]
      },
      {
        "before": ["<leader>", "g"],
        "commands": ["bookmarks.list"]
      },
      {
        "before": ["<leader>", "n"],
        "commands": ["workbench.action.editor.nextChange"]
      },
      {
        "before": ["<leader>", "p"],
        "commands": ["workbench.action.editor.previousChange"]
      },
      {
        "before": ["z", "o"],
        "commands": ["editor.unfoldRecursively"]
      },
      {
        "before": ["<leader>", "e"],
        "commands": ["editor.action.marker.next"]
      },
      {
        "before": ["<C-u>"],
        "after": ["H", "z", "z"]
      },
      {
        "before": ["<C-d>"],
        "after": ["L", "z", "z"]
      }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
      {
        "before": ["<C-u>"],
        "after": ["H", "z", "z"]
      },
      {
        "before": ["<C-d>"],
        "after": ["L", "z", "z"]
      },
      {
        "before": ["g","r"],
        "commands": ["git.revertSelectedRanges"]
      },
      {
        "before": ["<leader>","a"],
        "commands": ["workbench.action.showCommands"]
      },
    ],
    "vim.handleKeys": {
      "<C-u>": true,
      "<C-d>": true,
      "<C-r>": true,
    },

    // ZEN
    "zenMode.hideLineNumbers": false,
    "zenMode.fullScreen": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    "breadcrumbs.enabled": false,

    // GIT
    "gitlens.menus": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.views.repositories.enabled": false,
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": false,
    "gitlens.views.search.enabled": true,
    "gitlens.views.compare.enabled": true,
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.compare.location": "scm",
    "gitlens.views.search.location": "scm",

    // TEST
    "jestrunner.configPath": "./packages/svtlib-videoplayer-react/package.json",
    // "jestrunner.configPath": "./packages/svtlib-videoplayer-api-client/package.json",
    // "jestrunner.configPath": "./packages/svt-videoplayer-examples/package.json",
    // "jestrunner.configPath": "./packages/svtlib-videoplayer-device/package.json",
    // "jestrunner.configPath": "./packages/svtlib-videoplayer-utils/package.json",
    // "jestrunner.configPath": "./packages/svtlib-videoplayer-statistics/package.json",
    // "jestrunner.configPath": "./package.json",

    // SEARCH
    "search.exclude": {
      "**/node_modules": true,
      "_scratch": true,
      "**/dist": true
    },

    // OTHER
    "javascript.updateImportsOnFileMove.enabled": "always",
    "css.validate": false,
    "files.trimTrailingWhitespace": true,
    "outline.icons": false,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "terminal.external.osxExec": "iTerm.app",
    "telemetry.enableTelemetry": false,
    "html.mirrorCursorOnMatchingTag": false,
    "emmet.showExpandedAbbreviation": "never",
    "python.dataScience.askForKernelRestart": false,
    "gitlens.mode.active": "zen",
    "telemetry.enableCrashReporter": false,
  }
